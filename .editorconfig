root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{c,cpp}]
indent_size = 4

[*.rb]
indent_size = 2

[*.{php,ctp}]
indent_size = 4

[*.{js,ts,jsx,tsx,vue}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

